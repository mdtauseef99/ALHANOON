    </div>

                 <button type="submit" style="margin-top: 10px;" class="btn">
                    Send
                </button>
    <input type="reset" style="margin-top: 10px;" class="btn btn-primary" value="Clear" id="button" />
                @*<a style="margin-top: 10px;" href="#" class="btn">Submit</a>*@
                @*<a style="margin-top: 10px;" href="#" class="btn"> Clear</a>*@
    if (Session["Success"] != null)
     {
    <div class="successmsg">
        @Session["Success"].ToString()
    </div>
         Session["Success"] = null;
     }
     else if (Session["Error"] != null)
     {
    <div class="errormsg">
        @Session["Error"].ToString()
    </div>
         Session["Error"] = null;
     }
}
