                <li style="margin-top: 5px;" class="col-md-10 col-xs-10">
                    Phone: 845123456
                </li>
            </ul>

        </div>
        <div class="col-md-8 contact-form">
            <section>
                <div class="col-md-4 col-xs-12">
                    <h4 style="color: #60646D; font-size: 24px;">Drop us a line</h4>
                </div>
            </section>
            <div class="clearfix"></div>
            <p>
                We will get back to you asap.
            </p>
            <div class="form2">
@using (Html.BeginForm("Contact", "Home", new { @class = "form contact-form", @role = "form" }))
{
     <div class="col-md-4 col-xs-12 " style="color:red">
                    @Html.TextBoxFor(x => x.FName, new { @class = "form-control", @placeholder = "Name" })
                    @Html.ValidationMessageFor(x => x.FName)


                    @*<input style="" type="text" class="form-control" placeholder="Name">*@
    </div>
               
    <div class="col-md-4 col-xs-12" style="color:red">
        @Html.TextBoxFor(x => x.Emails, new { @class = "form-control", @placeholder = "Enter your email" })
        @Html.ValidationMessageFor(x => x.Emails)
        @*<input style="" type="text" class="form-control" placeholder="Email">*@
    </div>
    <div class="col-md-4 col-xs-12" style="color:red">
        @Html.TextBoxFor(x => x.Mobile, new { @class = "form-control", @placeholder = "Phone" })
        @Html.ValidationMessageFor(x => x.Mobile)
        @*<input style="" type="text" class="form-control" placeholder="Phone">*@
    </div>
                <div class="clearfix"></div>
    <div class="col-md-12 text" style="color:red">
        @Html.TextAreaFor(x => x.Message, new { @class = "form-control", @rows = "8", @placeholder = "Write a message" })
        @Html.ValidationMessageFor(x => x.Message)
