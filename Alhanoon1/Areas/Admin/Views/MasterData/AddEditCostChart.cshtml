@model CommonUtility.CostComparisionChartModel
@{
    ViewBag.Title = "AddEditCostChart";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@{Html.EnableClientValidation(true);}
@using (Html.BeginForm("AddEditCostChart", "MasterData", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add/Edit Chart</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Basic Form Elements
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">

                                <div class="form-group">
                                    <label>Procedures</label>

                                    <p class="help-block">
                                        @Html.TextBoxFor(x => x.Procedures, new { @class = "form-control", @placeholder = "Procedures" })
                                        @Html.ValidationMessageFor(x => x.Procedures)
                                    </p>
                                </div>

                                <div class="form-group">
                                    <label>US</label>

                                    <p class="help-block">
                                        @Html.TextBoxFor(x => x.US, new { @class = "form-control", @placeholder = "US Amount" })
                                        @Html.ValidationMessageFor(x => x.US)
                                    </p>
                                </div>

                                <div class="form-group">
                                    <label>UK</label>

                                    <p class="help-block">
                                        @Html.TextBoxFor(x => x.UK, new { @class = "form-control", @placeholder = "UK Amount" })
                                        @Html.ValidationMessageFor(x => x.UK)
                                    </p>
                                </div>
                               

                                <div class="form-group">
                                    <label>Bangkok</label>

                                    <p class="help-block">
                                        @Html.TextBoxFor(x => x.Bangkok, new { @class = "form-control", @placeholder = "Bangkok Amount" })
                                        @Html.ValidationMessageFor(x => x.Bangkok)
                                    </p>
                                </div>


                                <div class="form-group">
                                    <label>India</label>

                                    <p class="help-block">
                                        @Html.TextBoxFor(x => x.Bangkok, new { @class = "form-control", @placeholder = "Bangkok Amount" })
                                        @Html.ValidationMessageFor(x => x.Bangkok)
                                    </p>
                                </div>

                             
                                <div class="form-group">
                                    <label>Singapore</label>

                                    <p class="help-block">
                                        @Html.TextBoxFor(x => x.Singapore, new { @class = "form-control", @placeholder = "Singapore Amount" })
                                        @Html.ValidationMessageFor(x => x.Singapore)
                                    </p>
                                </div>
                              

                               
                                <div class="form-group">


                                    @Html.LabelFor(x => x.IsActive, new { @class = "checkbox-inline" })



                                    @Html.CheckBoxFor(x => x.IsActive, new { @class = "checkbox-inline" })

                                </div>



                                <input type="submit" value="Submit" class="btn btn-default" />
                                <a href="@Url.Action("CostChart","MasterData")" class="btn btn-default">Cancel</a>

                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
}




