@model CommonUtility.CostComparisionContentModel
@{
    ViewBag.Title = "AddEditCostContent";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@{Html.EnableClientValidation(true);}
@using (Html.BeginForm("AddEditCostContent", "MasterData", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add/Edit Cost Comparison</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Basic Form Elements
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">


                                <div class="form-group">
                                    <label>Title</label>

                                    <p class="help-block">
                                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Title" })
                                        @Html.ValidationMessageFor(x => x.Title)
                                    </p>
                                </div>



                                <div class="form-group">
                                    <label>Description</label>

                                    <p class="help-block">
                                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @placeholder = "Description" })
                                        @Html.ValidationMessageFor(x => x.Description)
                                    </p>
                                </div>

                                <div class="form-group">
                                    <label>Chart Title</label>

                                    <p class="help-block">
                                        @Html.TextBoxFor(x => x.ChartTitle, new { @class = "form-control", @placeholder = "ChartTitle" })
                                        @Html.ValidationMessageFor(x => x.ChartTitle)
                                    </p>
                                </div>


                                <div class="form-group">
                                    <label>Disclaimer</label>

                                    <p class="help-block">
                                        @Html.TextBoxFor(x => x.Disclaimer, new { @class = "form-control", @placeholder = "Disclaimer" })
                                        @Html.ValidationMessageFor(x => x.Disclaimer)
                                    </p>
                                </div>


                                <div class="form-group">


                                    @Html.LabelFor(x => x.IsActive, new { @class = "checkbox-inline" })



                                    @Html.CheckBoxFor(x => x.IsActive, new { @class = "checkbox-inline" })

                                </div>



                                <input type="submit" value="Submit" class="btn btn-default" />
                                <a href="@Url.Action("CostContent","MasterData")" class="btn btn-default">Cancel</a>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
}



