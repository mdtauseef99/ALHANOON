@{Html.EnableClientValidation(true);}
@using (Html.BeginForm("AddEditBanner", "MasterData", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.BannerId)
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add/Edit Banner</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Basic Form Elements
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">

                                <div class="form-group">
                                    <label>Upload Image</label>
                                    @if (Model.BannerId != 0)
                                    {
                                        <input type="file" class="text" name="file" id="file" />
                                    }
                                    else
                                    {
                                        <input type="file" class="text" name="file" id="file" multiple="multiple" />
                                    }
                                </div>

                              
                                <div class="form-group">


                                    @Html.LabelFor(x => x.IsActive, new { @class = "checkbox-inline" })



                                    @Html.CheckBoxFor(x => x.IsActive, new { @class = "checkbox-inline" })

                                </div>


                                <input type="submit" value="Submit" class="btn btn-default" />
                               <a href="@Url.Action("Banner","MasterData")" class="btn btn-default">Cancel</a>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
}
